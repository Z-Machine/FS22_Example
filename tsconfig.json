{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "outDir": "./dist/lua",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "typescript-to-lua/language-extensions",
      "lua-types/core/coroutine",
      "lua-types/core/global",
      "lua-types/core/math",
      "lua-types/core/metatable",
      "lua-types/core/modules",
      "lua-types/core/string",
      "lua-types/core/table",
      "lua-types/special/5.1"
    ]
  },
  "include": ["src"],
  "exclude": ["scripts", "dist", "assets"],
  "tstl": {
    "luaTarget": "5.1",
    "noImplicitSelf": true,
    "noHeader": true,
    "luaLibImport": "none"
  }
}
